---
import { Icon } from "astro-icon/components";

interface Props {
	title?: string;
	accent?: keyof typeof colors;
}

const { title, accent: selected = "amber" } = Astro.props;

const colors = {
	blue: "bg-accent-2",
	amber: "bg-accent",
	red: "bg-accent-2",
	gray: "bg-slate-500",
};

const icons = [
	{ name: "mdi:arrow-top-left-thick", size: 24 },
	{ name: "mdi:circle-medium", size: 16 },
	{ name: "mdi:circle-medium", size: 16 },
	{ name: "mdi:circle-medium", size: 16 },
	{ name: "mdi:circle-medium", size: 16 },
	{ name: "mdi:circle-medium", size: 16 },
];
---

<div
	class:list={[
		colors[selected],
		"aside-wrapper relative mb-4 ml-0 mt-16 rounded-b-3xl rounded-r-3xl rounded-tl-2xl pb-2 pl-1 pr-2 pt-1 before:bg-accent-3",
	]}>
	<div
		class="relative -inset-y-8 -mb-7 mt-1 flex h-6 flex-row items-center gap-1 pr-2 text-accent-2 sm:pl-10">
		<span>
			{
				icons.map(({ name, size }) => (
					<Icon aria-hidden="true" class="inline" focusable="false" name={name} size={size} />
				))
			}
		</span>
		<!-- <span class="text-xl">• • • • •</span> -->
		<span class="text-md flex-grow font-bold">{title}</span>
		<Icon
			aria-hidden="true"
			class="inline"
			focusable="false"
			name="mdi:arrow-bottom-right-thick"
			size={24}
		/>
	</div>
	<p
		class="relative -inset-x-1.5 -inset-y-1.5 rounded-bl-sm rounded-br-2xl rounded-tl-xl rounded-tr-sm border-4 border-accent bg-text-bg px-8 py-2 dark:text-accent">
		<slot />
	</p>
</div>
