---
interface Props {
  url: string;
}

const { url } = Astro.props;

const source = `https://www.youtube.com/embed/${url}`
---

<iframe class="aspect-video w-full" src={source} title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
