---
import { generateToc } from "@/utils/generateToc";
import type { MarkdownHeading } from "astro";
import TOCHeading from "./TOCHeading.astro";

interface Props {
	headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const toc = generateToc(headings);
---

<aside
	class="sticky top-20 hidden min-w-36 max-w-60 self-start lg:block lg:min-w-44 xl:-me-36"
	style="grid-area: aside">
	<hr class="h-0.5 rounded-sm border-0 bg-textColor" />
	<h2 class="subtitle text-center text-lg">Table of Contents</h2>
	<hr class="h-0.5 rounded-sm border-0 bg-textColor" />
	<ul class="text-xs">
		{toc.map((heading) => <TOCHeading heading={heading} />)}
	</ul>
</aside>
