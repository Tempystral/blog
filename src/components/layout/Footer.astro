---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
	class="mb-2 mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top font-semibold text-textColor sm:flex-row sm:justify-between sm:text-xs">
	<div class="me-0 sm:me-4">
		<span class="inline-block">
			&copy; {siteConfig.author}
			{year}. Based roughly on
			<a class="text-link" href="https://github.com/chrismwilliams/astro-theme-cactus">
				ðŸš€&nbsp;Astro Cactus
			</a>
		</span>
	</div>
	<nav
		aria-label="More on this site"
		class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500">
		{
			menuLinks.map((link) => (
				<a class="px-4 py-2 sm:py-0 sm:hover:text-textColor sm:hover:underline" href={link.path}>
					{link.title}
				</a>
			))
		}
	</nav>
</footer>
